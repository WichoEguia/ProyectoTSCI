<%= link_to "Nuevo Articulo", new_article_path, class: "botonazo" %>

<% @articles.each do |article| %>
<div class="card">
  <p><strong><%= article.title %></strong></p>
  <p><%= article.text %></p>

  <div>
    <%= link_to "Ver", article_path(article), class: "botonazo" %>
    <%= link_to "Editar", edit_article_path(article), class: "botonazo" %>
    <%= link_to "Borrar", article_path(article), class: "botonazo", method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
<% end %>